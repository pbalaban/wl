= form_for([@place, @exercise]) do |f|
  - if @exercise.errors.any?
    #error_explanation
      %h2
        = pluralize(@exercise.errors.count, "error")
        prohibited this exercise from being saved:
      %ul
        - @exercise.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :values_type
    %br/
    = f.select :values_type, Exercise::VALUES_TYPES
  .actions
    = f.submit
